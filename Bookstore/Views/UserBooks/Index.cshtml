@model IEnumerable<Bookstore.Models.UserBooks>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                User
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin")) { 
            <th>
                Write a review
            </th>
            }

            @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
            {
                <th>
                    Download
            </th>
            }
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Title)
            </td>
            <td>
                    @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                    {
                  
                        <a href="@Url.Action("WriteReview", "UserBooks", new { bookId = item.Id })">Write a review</a>
                    
                    }
            </td>
                @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                {
            <td>
                @{
                    var fileName2 = item.DownloadURL.Substring(item.DownloadURL.LastIndexOf('/') + 1);
                 }
                    <a href="/UploadedFiles/@fileName2" download>Download</a>
                  
            </td>
                }
            <td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    }
                    |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
        </tr>
}
    </tbody>
</table>
